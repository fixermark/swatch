{
  "include":["./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    /* Language and Environment */
    "target": "es5",                                     
    "lib": ["dom", "es2015"],                            
    "jsx": "react",

    /* Modules */
    "module": "es6",                                     
   
    "moduleResolution": "node",                          
   
    /* Emit */
    "outDir": "build",                                   

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": false,           

    /* Type Checking */
    "strict": true,                                      
   
    /* Completeness */
     "skipLibCheck": true                                
  }
}
